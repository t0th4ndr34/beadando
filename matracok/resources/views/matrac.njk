{% extends 'master' %}

{% block scripts %}
<script src="/scripts/ajaxDelete.js"></script>
{% endblock %}

{% block content %}
<h1>{{ matrac.name }}</h1>
<p><b>Kategória:</b> {{ matrac.category.name }}</p>
<p><b>Fajta:</b> {{ matrac.type.name }}</p>
<p><b>Mennyiség:</b> {{ matrac.amount }}</p>
{% if currentUser %}
<form action="/matrac/{{ matrac.id }}/delete" method="POST" id="deleteMatracForm">
    {{ csrfField }}
    <a class="btn btn-primary" href="/matrac/{{ matrac.id }}/edit" role="button" id="changeButton">Módosítás</a>
    <button type="submit" class="btn btn-danger">Törlés</button>    
</form>

<span class="help-block"></span>

<div class="modal fade confirm-modal" tabindex="-1" role="dialog" id="deleteConfirmModal">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
        <div class="modal-body">
            Biztosan törölni szeretnéd?
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-success modal-ok" data-dismiss="modal">OK</button>
            <button type="button" class="btn btn-danger modal-cancel" data-dismiss="modal">Mégse</button>
        </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}